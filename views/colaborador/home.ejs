<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-3">
      <%- include('../partials/sidebar', { active: 'reservas', basePath: '/colaborador' }) %>
    </div>

    <div class="col-md-9">
      <% if (typeof mensagem !== 'undefined' && mensagem) { %>
        <div class="alert alert-info"><%= mensagem %></div>
      <% } %>

      <div class="row g-3">
        <!-- Formulário de nova reserva -->
        <div class="col-lg-5">
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title mb-3">Nova Reserva</h5>
              <form action="/colaborador/reservar" method="POST">
                <div class="mb-3">
                  <label for="local_id" class="form-label">Local</label>
                  <% if (typeof locais !== 'undefined' && locais && locais.length) { %>
                    <select id="local_id" name="local_id" class="form-select" required>
                      <option value="">Selecione um local</option>
                      <% locais.forEach(function(l) { %>
                        <option value="<%= l.id %>"><%= l.nome %> <%= l.bloco ? (' - ' + l.bloco) : '' %></option>
                      <% }); %>
                    </select>
                  <% } else { %>
                    <input id="local_id" name="local_nome" class="form-control" placeholder="Digite o nome do local (ex: Lab 101)" required>
                    <div class="form-text">Se a lista de locais não estiver disponível, informe o nome do local aqui.</div>
                  <% } %>
                </div>

                <!-- Equipamentos dinâmicos -->
                <div class="mb-3">
                  <label class="form-label">Equipamentos</label>
                  <div id="equipamentosContainer">
                    <div class="form-text">Selecione um local para carregar os equipamentos disponíveis.</div>
                  </div>
                </div>

                <div class="mb-3">
                  <label for="inicio_per" class="form-label">Início</label>
                  <input type="datetime-local" id="inicio_per" name="inicio_per" class="form-control" required>
                </div>

                <div class="mb-3">
                  <label for="fim_per" class="form-label">Fim</label>
                  <input type="datetime-local" id="fim_per" name="fim_per" class="form-control" required>
                </div>

                <div class="mb-3">
                  <label for="motivo" class="form-label">Motivo</label>
                  <textarea id="motivo" name="motivo" class="form-control" rows="3" placeholder="Descreva o motivo do agendamento"></textarea>
                </div>

                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">Solicitar Reserva</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Lista de reservas do colaborador -->
        <div class="col-lg-7">
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">Minhas Reservas</h5>
                <small class="text-muted"><%= reservas && reservas.length ? (reservas.length + ' registros') : 'Nenhuma reserva' %></small>
              </div>

              <div class="table-responsive">
                <table class="table table-hover table-sm mb-0">
                  <thead class="table-light">
                    <tr>
                      <th>ID</th>
                      <th>Local</th>
                      <th>Início</th>
                      <th>Fim</th>
                      <th>Status</th>
                      <th>Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (reservas && reservas.length) { %>
                      <% reservas.forEach(function(r) { %>
                        <tr>
                          <td><%= r.id %></td>
                          <td><%= r.local_nome || r.local_nome_text || '—' %></td>
                          <td><%= r.inicio_per ? new Date(r.inicio_per).toLocaleString() : '—' %></td>
                          <td><%= r.fim_per ? new Date(r.fim_per).toLocaleString() : '—' %></td>
                          <td>
                            <% if (r.status === 'pendente') { %>
                              <span class="badge bg-warning text-dark">Pendente</span>
                            <% } else if (r.status === 'enviado a diretoria') { %>
                              <span class="badge bg-info text-dark">Enviado à Diretoria</span>
                            <% } else if (r.status === 'aprovado') { %>
                              <span class="badge bg-success">Aprovado</span>
                            <% } else if (r.status === 'rejeitado') { %>
                              <span class="badge bg-danger">Rejeitado</span>
                            <% } else { %>
                              <span class="badge bg-secondary"><%= r.status %></span>
                            <% } %>
                          </td>
                          <td class="text-end">
                            <div class="d-inline-flex gap-2">
                              <a href="/colaborador/reserva/<%= r.id %>" class="btn btn-sm btn-outline-secondary">Ver</a>
                              <% if (r.status === 'pendente') { %>
                                <form action="/colaborador/cancelar-reserva/<%= r.id %>" method="POST" onsubmit="return confirm('Cancelar esta reserva?')">
                                  <button class="btn btn-sm btn-outline-danger">Cancelar</button>
                                </form>
                              <% } %>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="6" class="text-center py-4">Você ainda não fez nenhuma reserva.</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<script>
  // dados enviados pelo servidor
  const recursos = <%- JSON.stringify(typeof recursos !== 'undefined' ? recursos : []) %>;
  const locaisRecursos = <%- JSON.stringify(typeof locaisRecursos !== 'undefined' ? locaisRecursos : []) %>;

  function clamp(v, a, b) {
    v = Number(v);
    if (isNaN(v)) return a;
    return Math.max(a, Math.min(b, v));
  }

  function buildEquipamentosList(localId) {
    const container = document.getElementById('equipamentosContainer');
    container.innerHTML = '';
    if (!localId) {
      container.innerHTML = '<div class="form-text">Selecione um local para carregar os equipamentos disponíveis.</div>';
      return;
    }
    const itens = locaisRecursos.filter(lr => String(lr.local_id) === String(localId));
    if (!itens.length) {
      container.innerHTML = '<div class="form-text">Nenhum equipamento cadastrado para este local.</div>';
      return;
    }

    itens.forEach(lr => {
      const recurso = recursos.find(r => r.id === lr.recurso_id) || { nome: 'Recurso' };
      const available = Number(lr.quantidade) || 0;

      const row = document.createElement('div');
      row.className = 'd-flex align-items-center mb-2 gx-2';

      // Checkbox
      const chkWrapper = document.createElement('div');
      chkWrapper.className = 'form-check me-2';
      const chk = document.createElement('input');
      chk.type = 'checkbox';
      chk.className = 'form-check-input recurso-checkbox';
      chk.id = 'recurso-' + lr.id;
      chk.dataset.lrId = lr.id;
      chkWrapper.appendChild(chk);

      // Label
      const lbl = document.createElement('label');
      lbl.htmlFor = chk.id;
      lbl.className = 'form-label mb-0 flex-grow-1';
      lbl.style.marginRight = '12px';
      const nameSpan = document.createElement('span');
      nameSpan.innerText = recurso.nome;
      const availSpan = document.createElement('small');
      availSpan.className = 'text-muted ms-2';
      availSpan.innerText = `(Disponível: ${available})`;
      lbl.appendChild(nameSpan);
      lbl.appendChild(availSpan);

      // Input group for quantity
      const inputGroup = document.createElement('div');
      inputGroup.className = 'input-group input-group-sm ms-auto';
      inputGroup.style.width = '130px';

      const btnMinus = document.createElement('button');
      btnMinus.type = 'button';
      btnMinus.className = 'btn btn-outline-secondary';
      btnMinus.innerText = '-';
      btnMinus.setAttribute('aria-label', 'Diminuir quantidade');

      const qtyInput = document.createElement('input');
      qtyInput.type = 'number';
      qtyInput.name = `equipamentos[${lr.id}]`;
      qtyInput.min = 1;
      qtyInput.max = available;
      qtyInput.value = 1;
      qtyInput.className = 'form-control text-center';
      qtyInput.style.padding = '0.2rem .5rem';
      qtyInput.disabled = true; // começa desabilitado até checkbox marcar

      const btnPlus = document.createElement('button');
      btnPlus.type = 'button';
      btnPlus.className = 'btn btn-outline-secondary';
      btnPlus.innerText = '+';
      btnPlus.setAttribute('aria-label', 'Aumentar quantidade');

      inputGroup.appendChild(btnMinus);
      inputGroup.appendChild(qtyInput);
      inputGroup.appendChild(btnPlus);

      // Se não disponível
      if (available <= 0) {
        chk.disabled = true;
        const badge = document.createElement('span');
        badge.className = 'badge bg-danger ms-2';
        badge.innerText = 'Indisponível';
        lbl.appendChild(badge);
        // manter inputGroup desabilitado
      }

      // Eventos
      chk.addEventListener('change', () => {
        const enabled = chk.checked && available > 0;
        qtyInput.disabled = !enabled;
        if (!enabled) qtyInput.value = 1;
      });

      btnMinus.addEventListener('click', () => {
        if (qtyInput.disabled) return;
        const min = Number(qtyInput.min) || 1;
        qtyInput.value = clamp(Number(qtyInput.value) - 1, min, Number(qtyInput.max) || min);
      });

      btnPlus.addEventListener('click', () => {
        if (qtyInput.disabled) return;
        const max = Number(qtyInput.max) || 1;
        qtyInput.value = clamp(Number(qtyInput.value) + 1, Number(qtyInput.min) || 1, max);
      });

      qtyInput.addEventListener('input', () => {
        const min = Number(qtyInput.min) || 1;
        const max = Number(qtyInput.max) || min;
        qtyInput.value = clamp(qtyInput.value, min, max);
      });

      // Monta a linha
      row.appendChild(chkWrapper);
      row.appendChild(lbl);
      row.appendChild(inputGroup);

      container.appendChild(row);
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    const sel = document.getElementById('local_id');
    if (sel) {
      sel.addEventListener('change', (e) => buildEquipamentosList(e.target.value));
      // se houver um local selecionado por padrão, carregar equipamentos
      if (sel.value) buildEquipamentosList(sel.value);
    }
  });
</script>