<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-3">
      <%- include('../partials/sidebar', { active: 'perfil', basePath: '/colaborador' }) %>
    </div>
    <div class="col-md-8">
      <% if (typeof mensagem !== 'undefined' && mensagem) { %>
        <div class="alert alert-info"><%= mensagem %></div>
      <% } %>

      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Meu Perfil</h5>
          <small class="text-muted">Atualize suas informações</small>
        </div>
        <div class="card-body">
          <form action="/colaborador/perfil/<%= colaborador.id %>" method="POST">
            <div class="mb-3">
              <label for="nome" class="form-label">Nome</label>
              <input id="nome" name="nome" class="form-control" required value="<%= colaborador.nome %>">
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">E-mail</label>
              <input id="email" name="email" type="email" class="form-control" required value="<%= colaborador.email %>">
            </div>

            <div class="mb-3">
              <label for="senha" class="form-label">Senha (nova senha)</label>
              <input id="senha" name="senha" type="password" class="form-control" required placeholder="Digite a nova senha">
              <div class="form-text">A senha será atualizada imediatamente.</div>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">Atualizar Perfil</button>
              <a href="/colaborador/dashboard" class="btn btn-outline-secondary">Voltar</a>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer') %>