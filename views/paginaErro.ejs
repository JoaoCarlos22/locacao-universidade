<%- include('./partials/header') %>

<style>
    .erro-card { max-width: 900px; margin: 40px auto; }
    pre { white-space: pre-wrap; word-break: break-word; }
  </style>

<div class="container">
  <div class="card erro-card border-danger">
    <div class="card-header bg-danger text-white">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> <%= title || 'Erro Interno' %></h5>
        </div>
        <div>
          <% if (typeof status !== 'undefined') { %>
            <span class="badge bg-light text-danger">Status: <%= status %></span>
          <% } %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <p class="lead"><%= message || 'Ocorreu um erro ao processar sua solicitação. Por favor, tente novamente mais tarde.' %></p>

      <% if (erro) { %>
        <div class="mt-3">
          <h6>Detalhes (apenas para desenvolvedores)</h6>
          <details class="mb-2">
            <summary class="small text-muted">Mostrar detalhes técnicos</summary>
            <pre class="small bg-light p-3 border rounded"><%= erro.stack || erro.message || JSON.stringify(erro) %></pre>
          </details>
        </div>
      <% } %>

      <div class="mt-4">
        <a href="/" class="btn btn-secondary me-2"><i class="bi bi-house-door"></i> Voltar à Home</a>
        <a href="javascript:history.back()" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>