<%- include('./partials/header') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <% if (typeof mensagem !== 'undefined' && mensagem) { %>
        <div class="alert alert-info"><%= mensagem %></div>
      <% } %>
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title mb-3 text-center">Entrar</h3>
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">E-mail</label>
              <input type="email" class="form-control" id="email" name="email" required placeholder="seu@exemplo.com">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Senha</label>
              <input type="password" class="form-control" id="password" name="password" required placeholder="Senha">
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
          </form>

          <hr>

          <p class="text-center mb-0">
            NÃ£o tem conta? <a href="/register">Cadastre-se</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>